{
  "name": "markdown-docs-converter",
  "displayName": "Markdown Docs Converter",
  "description": "Convert between Markdown, Office documents, PDFs, and diagrams right from the context menu.",
  "version": "0.1.0",
  "author": "余文锋",
  "publisher": "ywfhighlo",
  "repository": {
    "type": "git",
    "url": "https://github.com/ywfhighlo/markdown-docs-converter.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:markdown-docs-converter.mdToDocx",
    "onCommand:markdown-docs-converter.mdToPdf",
    "onCommand:markdown-docs-converter.mdToHtml",
    "onCommand:markdown-docs-converter.officeToMd",
    "onCommand:markdown-docs-converter.diagramToPng",
    "onCommand:markdown-docs-converter.openTemplateSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-docs-converter.mdToDocx",
        "title": "Convert to DOCX"
      },
      {
        "command": "markdown-docs-converter.mdToPdf",
        "title": "Convert to PDF"
      },
      {
        "command": "markdown-docs-converter.mdToHtml",
        "title": "Convert to HTML"
      },
      {
        "command": "markdown-docs-converter.officeToMd",
        "title": "Convert to Markdown"
      },
      {
        "command": "markdown-docs-converter.diagramToPng",
        "title": "Convert to PNG"
      },
      {
        "command": "markdown-docs-converter.openTemplateSettings",
        "title": "Template Settings..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs-converter.mdToDocx",
          "group": "2_conversion@1"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs-converter.mdToPdf",
          "group": "2_conversion@2"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs-converter.mdToHtml",
          "group": "2_conversion@3"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs-converter.openTemplateSettings",
          "group": "2_conversion@4"
        },
        {
          "when": "resourceExtname == .docx || resourceExtname == .xlsx || resourceExtname == .ppt || resourceExtname == .pdf",
          "command": "markdown-docs-converter.officeToMd",
          "group": "2_conversion@1"
        },
        {
          "when": "resourceExtname == .svg || resourceExtname == .drawio",
          "command": "markdown-docs-converter.diagramToPng",
          "group": "2_conversion@1"
        },
        {
          "when": "resourceIsFolder",
          "command": "markdown-docs-converter.mdToDocx",
          "group": "2_conversion@1"
        },
        {
          "when": "resourceIsFolder",
          "command": "markdown-docs-converter.mdToPdf",
          "group": "2_conversion@2"
        },
        {
          "when": "resourceIsFolder",
          "command": "markdown-docs-converter.mdToHtml",
          "group": "2_conversion@3"
        },
        {
          "when": "resourceIsFolder",
          "command": "markdown-docs-converter.openTemplateSettings",
          "group": "2_conversion@6"
        },
        {
          "when": "resourceIsFolder",
          "command": "markdown-docs-converter.officeToMd",
          "group": "2_conversion@4"
        },
        {
          "when": "resourceIsFolder",
          "command": "markdown-docs-converter.diagramToPng",
          "group": "2_conversion@5"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Docs Converter",
      "properties": {
        "markdown-docs-converter.outputDirectory": {
          "type": "string",
          "default": "./converted_markdown_files",
          "description": "Directory where converted files will be saved",
          "scope": "window"
        },
        "markdown-docs-converter.pythonPath": {
          "type": "string",
          "default": "python",
          "markdownDescription": "Path to Python executable. On Windows, this should typically be `python`. On macOS/Linux, it's often `python3`.",
          "scope": "window"
        },
        "markdown-docs-converter.useTemplate": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "**Enable template usage for DOCX conversion**\n\nWhen enabled, DOCX conversion will use a template file with project information.",
          "scope": "window",
          "order": 10
        },
        "markdown-docs-converter.templatePath": {
          "type": "string",
          "default": "",
          "markdownDescription": "**Path to custom DOCX template file**\n\nLeave empty to use the default template. Click the folder icon to browse for a template file.",
          "scope": "window",
          "order": 11
        },
        "markdown-docs-converter.projectName": {
          "type": "string",
          "default": "",
          "markdownDescription": "**Project name**\n\nThis will be used in the template when converting to DOCX.",
          "scope": "window",
          "order": 20
        },
        "markdown-docs-converter.author": {
          "type": "string",
          "default": "",
          "markdownDescription": "**Author name**\n\nThis will be used in the template when converting to DOCX.",
          "scope": "window", 
          "order": 21
        },
        "markdown-docs-converter.email": {
          "type": "string",
          "default": "",
          "markdownDescription": "**Email address**\n\nThis will be used in the template when converting to DOCX.",
          "scope": "window",
          "order": 22
        },
        "markdown-docs-converter.mobilephone": {
          "type": "string",
          "default": "",
          "markdownDescription": "**Mobile phone**\n\nThis will be used in the template when converting to DOCX.",
          "scope": "window",
          "order": 23
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install-deps": "npm install && pip3 install -r backend/requirements.txt",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "typescript": "^5.0.0",
    "eslint": "^8.40.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0"
  }
} 